@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="tophalf">
                    <img src="~/assets/imgs/Menu-Logo-Alt-black.png" alt="">
                    <br/>
                    <img class="userICN" src="~/assets/imgs/icons8-user-48.png" alt="" >
                    <h1 style="text-align: center">Log In</h1>
                </div>
                
                

                @* <h1>@ViewData["Title"]</h1> *@
                @* <h2>Use a local account to log in.</h2> *@
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">

                    <p class="text-light">Email</p>
                    <input asp-for="Input.Email" class="form-control bg-white" autocomplete="username" aria-required="true"/>
                    @* <label asp-for="Input.Email" class="form-label"></label> *@
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">

                    <p class="text-light">Password</p>
                    <input asp-for="Input.Password" class="form-control bg-white" autocomplete="current-password" aria-required="true"/>
                    @* <label asp-for="Input.Password" class="form-label"></label> *@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox" style="margin: 5px 0  0px 21px;">
                        <label asp-for="Input.RememberMe" class="form-label" align="left" >
                            <input class="form-check-input" asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p style="text-align: center">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    <p style="text-align: center"/>
                    <p style="text-align: center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    <p style="text-align: center"/>
                    <p style="text-align: center">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    <p style="text-align: center"/>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
